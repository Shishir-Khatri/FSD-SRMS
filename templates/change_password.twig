{% extends "layout/base.twig" %}

{% block title %}Change Password{% endblock %}

{% block content %}
<div class="sms-grid mb-section justify-center">
    <div class="sms-col sms-col-half">
        <div class="content-card">
            <div class="card-header-bar bg-danger-header">
                <h4 class="card-header-title">Change Password</h4>
            </div>
            <div class="card-content">
                {% if error %}
                    <div class="sms-notification notification-danger">{{ error }}</div>
                {% endif %}
                
                <p class="text-muted mb-md">For security, please update your password.</p>
                
                <form method="POST">
                    <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                    
                    <div class="form-group">
                        <label class="form-label">Current Password</label>
                        <input type="password" class="form-input" name="current_password" required>
                    </div>
                    <div class="form-group">
                        <label class="form-label">New Password</label>
                        <input type="password" class="form-input" name="new_password" required>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Confirm New Password</label>
                        <input type="password" class="form-input" name="confirm_password" required>
                    </div>
                    
                    <div class="d-grid">
                        <button type="submit" class="btn-action btn-danger">Update Password</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}
