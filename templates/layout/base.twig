<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}SMS{% endblock %} - Student Record Management</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="../assets/css/style.css">
    {% block head %}{% endblock %}
</head>
<body>

    {% if not hide_nav %}
    <header class="main-header">
        <div class="sms-container header-content">
            <a class="nav-brand" href="dashboard.php">Student Management</a>
            <button class="nav-toggle" aria-label="Toggle navigation">
                <i class="bi bi-list"></i>
            </button>
            <nav class="main-nav">
                <ul class="nav-list">
                    {% if session.user_id %}
                        <li>
                            <span class="nav-item-link">Welcome, {{ session.username }} ({{ session.role_name }})</span>
                        </li>
                         {% if session.role != 3 %}
                            <li>
                                <a class="nav-item-link" href="search.php">Students</a>
                            </li>
                             {% if session.role == 1 %}
                                <li>
                                    <a class="nav-item-link" href="admins.php">Admins</a>
                                </li>
                            {% endif %}
                        {% endif %}
                        <li>
                            <a class="nav-item-link" href="logout.php">Logout</a>
                        </li>
                    {% else %}
                        <li>
                            <a class="nav-item-link" href="login.php">Login</a>
                        </li>
                    {% endif %}
                </ul>
            </nav>
        </div>
    </header>
    {% endif %}

    <div class="sms-container mb-section">
        {% if flash_message %}
            <div class="sms-notification notification-{{ flash_type }}" role="alert">
                <span>{{ flash_message }}</span>
                <button type="button" class="close-notification" onclick="this.parentElement.remove()">&times;</button>
            </div>
        {% endif %}

        {% block content %}{% endblock %}
    </div>

    <footer class="text-center mt-section text-muted text-small">
        <p>&copy; {{ "now"|date("Y") }} Student Record Management System</p>
    </footer>

    <script src="../assets/js/script.js"></script>
    <script>
        // Simple Navbar Toggle
        document.addEventListener('DOMContentLoaded', function() {
            const toggler = document.querySelector('.nav-toggle');
            const nav = document.querySelector('.main-nav');
            
            if(toggler && nav) {
                toggler.addEventListener('click', function() {
                    nav.classList.toggle('active');
                });
            }
        });
    </script>
    {% block scripts %}{% endblock %}
</body>
</html>
